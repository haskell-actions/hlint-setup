{
  "name": "hlint-setup",
  "version": "1.0.1",
  "description": "GitHub Action: Set up hlint",
  "main": "dist/index.js",
  "scripts": {
    "lint": "true",
    "test": "true",
    "compile": "tsc",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run lint && npm run compile && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haskell-actions/hlint-setup.git"
  },
  "keywords": [
    "Actions",
    "GitHub",
    "Haskell",
    "Lint",
    "HLint"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/haskell-actions/hlint-setup/issues"
  },
  "homepage": "https://github.com/haskell-actions/hlint-setup#readme",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@vercel/ncc": "^0.38.0",
    "typescript": "^5.2.2"
  }
}
